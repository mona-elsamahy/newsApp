<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
        android:background="#C8D51C0F"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                    android:text="  The Minister of Higher Education announces that the start of the study             is 9 October."
                    android:layout_width="400dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#FFFFFF"
                    android:textColor="#211F23"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:id="@+id/titleMinisterHighEducation"
                    android:layout_weight="1"/>
    <ImageView
            android:layout_width="410dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/college"
            android:layout_marginTop="10dp"
            android:id="@+id/imageMinisterHighEducation"
            android:layout_weight="1"/>
    <TextView
            android:text="The Ministry of Education and Technical Education announced the timetable for the next school year 2021/2022, where the study begins in the new academic year, on Saturday, October 9, 2021, and ends on Thursday, June 16, 2022. The ministry stated in a statement today that the mid-year vacation will begin From Saturday, February 5, 2022, until Thursday, February 17, 2022 (for 15 days)."
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:textSize="20dp"
            android:textColor="#0C0C0C"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:layout_gravity="center"
            android:id="@+id/detailMinisterHighEducation"
            android:layout_weight="1"/>
</LinearLayout>